<section>
    <h1>Log in</h1>

    <form method="post" action="/users/login">
        <div>
            <label for="email">Email : </label>
            <input type="text" name="email" />
        </div>
        <div>
            <label>Password : </label>
            <input type="password" name="password" />
        </div>
        <div>
            <input type="submit" value="log in">
        </div>
    </form>
</section>
{{#if error}}
<section>
    <p>{{error}}</p>
</section>
{{/if}}